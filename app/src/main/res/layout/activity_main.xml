<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/field" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/team_a"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="#FFFFFF"
                android:textSize="72sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/yellow_card" />

                <TextView
                    android:id="@+id/yellow_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/_0"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:gravity="center_horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/red_card" />

                <TextView
                    android:id="@+id/red_a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/_0"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/addOneTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_shape"
                android:onClick="teamA"
                android:text="@string/goal" />

            <Button
                android:id="@+id/addYellowTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/yellow_circle"
                android:onClick="yellow_Team_A"
                android:text="@string/yellow_card" />

            <Button
                android:id="@+id/addRedTeamA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/red_circle"
                android:onClick="red_Team_A"
                android:text="@string/red_card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/team_b"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:gravity="center_horizontal"
                android:text="@string/_0"
                android:textColor="#FFFFFF"
                android:textSize="72sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/yellow_card" />

                <TextView
                    android:id="@+id/yellow_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/_0"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="28dp"
                android:gravity="center_horizontal">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="22dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/red_card" />

                <TextView
                    android:id="@+id/red_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="@string/_0"
                    android:textSize="18sp" />

            </LinearLayout>

            <Button
                android:id="@+id/addOneTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_shape"
                android:onClick="teamB"
                android:text="@string/goal" />

            <Button
                android:id="@+id/addYellowTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/yellow_circle"
                android:onClick="yellow_Team_B"
                android:text="@string/yellow_card" />

            <Button
                android:id="@+id/addRedTeamB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_shape"
                android:drawableLeft="@drawable/red_circle"
                android:onClick="red_Team_B"
                android:text="@string/red_card" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120sp"
        android:background="@drawable/colon" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bottom_button_shape"
        android:onClick="reset"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="@string/reset"
        android:textColor="#2B4C05" />


</RelativeLayout>
